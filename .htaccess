# OVH Hosting Configuration for Symfony/React
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Handle Authorization header for JWT
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
    
    # Si la requête correspond à un fichier ou répertoire existant
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Servir les assets frontend depuis dist/assets
    RewriteCond %{REQUEST_URI} ^/assets/
    RewriteRule ^assets/(.*)$ /frontend/dist/assets/$1 [L]
    
    # Servir favicon et autres fichiers statiques
    RewriteCond %{REQUEST_URI} ^/favicon.webp$
    RewriteRule ^(.*)$ /frontend/dist/favicon.webp [L]
    
    # Handle CORS Preflight requests
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
    
    # Requêtes API vers le backend
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteRule ^(.*)$ /backend/public/index.php [QSA,L]
    
    # URL racine vers frontend
    RewriteCond %{REQUEST_URI} ^/$
    RewriteRule ^$ /frontend/dist/index.html [L]
    
    # Routes pour React Router
    RewriteCond %{REQUEST_URI} !^/backend/
    RewriteCond %{REQUEST_URI} !^/frontend/dist/
    RewriteCond %{REQUEST_URI} !^/assets/
    RewriteCond %{REQUEST_URI} !^/api/
    RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|map)$
    RewriteRule ^(.*)$ /frontend/dist/index.html [L]
    
    # Protection des fichiers sensibles
    RewriteRule ^backend/\.env - [F,L]
    RewriteRule ^backend/\.env\.local - [F,L]
    RewriteRule ^backend/vendor/ - [F,L]
    RewriteRule ^backend/src/ - [F,L]
    RewriteRule ^backend/config/ - [F,L]
</IfModule>

# CORS Headers
<IfModule mod_headers.c>
    # Set CORS headers for all requests
    SetEnvIf Origin "^https?://(localhost|127\.0\.0\.1|bigproject-development\.konstantine\.fr)(:[0-9]+)?$" CORS_ALLOW_ORIGIN=$0
    Header set Access-Control-Allow-Origin "%{CORS_ALLOW_ORIGIN}e" env=CORS_ALLOW_ORIGIN
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
    Header set Access-Control-Allow-Headers "Authorization, Content-Type, X-Requested-With, Accept, Origin, X-AUTH-TOKEN"
    Header set Access-Control-Allow-Credentials "true"
    Header set Access-Control-Expose-Headers "Link, Location"
    
    # Handle OPTIONS method
    SetEnvIf Request_Method OPTIONS CORS_PREFLIGHT=1
    Header always set Access-Control-Max-Age "1200" env=CORS_PREFLIGHT
    Header always set Content-Length "0" env=CORS_PREFLIGHT
    Header always set Content-Type "text/plain charset=UTF-8" env=CORS_PREFLIGHT
</IfModule>

# Configuration PHP
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value memory_limit 256M
    php_value max_execution_time 60
    
    # Error logging
    php_flag log_errors on
    php_value error_log /var/log/php/php_errors.log
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache pour fichiers statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Directory index
DirectoryIndex frontend/dist/index.html

# Custom error pages
ErrorDocument 500 "Internal Server Error - Please check the error logs for more details"
ErrorDocument 404 "Page Not Found - The requested resource could not be found"
ErrorDocument 403 "Forbidden - You do not have permission to access this resource"