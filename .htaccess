# Hostinger Configuration pour Symfony/React
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Si la requête correspond à un fichier ou répertoire existant
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Servir les assets frontend depuis dist/assets
    RewriteCond %{REQUEST_URI} ^/assets/
    RewriteRule ^assets/(.*)$ /frontend/dist/assets/$1 [L]
    
    # Servir favicon et autres fichiers statiques
    RewriteCond %{REQUEST_URI} ^/favicon.webp$
    RewriteRule ^(.*)$ /frontend/dist/favicon.webp [L]
    
    # Requêtes API vers le backend
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteRule ^(.*)$ /backend/public/index.php [QSA,L]
    
    # URL racine vers frontend
    RewriteCond %{REQUEST_URI} ^/$
    RewriteRule ^$ /frontend/dist/index.html [L]
    
    # Routes pour React Router
    RewriteCond %{REQUEST_URI} !^/backend/
    RewriteCond %{REQUEST_URI} !^/frontend/dist/
    RewriteCond %{REQUEST_URI} !^/assets/
    RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|map)$
    RewriteRule ^(.*)$ /frontend/dist/index.html [L]
    
    # Protection des fichiers sensibles
    RewriteRule ^backend/\.env - [F,L]
    RewriteRule ^backend/\.env\.local - [F,L]
    RewriteRule ^backend/vendor/ - [F,L]
    RewriteRule ^backend/src/ - [F,L]
    RewriteRule ^backend/config/ - [F,L]
</IfModule>

# Configuration PHP
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value memory_limit 256M
    php_value max_execution_time 60
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache pour fichiers statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>